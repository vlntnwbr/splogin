{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {"label": "run all checks",
            "detail": "pydocstyle -> pylint -> flake8 -> bandit",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "pydocstyle-check",
                "pylint-checks",
                "flake8-checks",
                "bandit-checks",
            ],
            "dependsOrder": "parallel"
        },
        {"label": "bandit-checks",
            "detail": "Check for security vulnerabilities using python-bandit.",
            "problemMatcher": [],
            "command": "pipenv",
            "args": [
                "run", "bandit", "-r", "splogin"
            ],
            "group": "test"
        },
        {"label": "pydocstyle-check",
            "detail": "Check documentation using pydocstyle.",
            "problemMatcher": [],
            "command": "pipenv",
            "args": [
                "run", "pydocstyle", "splogin"
            ],
            "group": "test"
        },
        {"label": "flake8-checks",
            "detail": "lint code using flake8.",
            "problemMatcher": [],
            "command": "pipenv",
            "args": [
                "run", "flake8", "--doctests", "--max-doc-length", "72", "splogin"
            ],
            "group": "test"
        },
        {"label": "pylint-checks",
            "detail": "lint code using pylint.",
            "problemMatcher": [],
            "command": "pipenv",
            "args": [
                "run", "pylint", "-f", "colorized", "splogin"
            ],
            "group": "test"
        }
    ]
}